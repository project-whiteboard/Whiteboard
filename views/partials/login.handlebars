 {{!-- Header --}}
<header>
    <div class="top">
        <h1 id="login-title" class="hidden">
            <span id="logo"> Whiteboard </span>
        </h1>
    </div>
</header>
{{!-- /header --}}

<section id="login-header">
    <div class="row">

        {{!-- Hero Left --}}
        <div class="hero-left">
            <div class="hero-basic">
                <h1>Student</h1>
                <div class="login-box animated fadeInUp">
                    <div class="box-header">
                        <h2>Login</h2>
                    </div>

                    {{#if message}}
                    <h3> {{message}} </h3>
                    <button class="btn btn-lg btn-primary btn-block" id='authenticatedUser'>Continue</button>
                    {{/if}}

                    {{#unless message}}
                    <h2 class="form-signin-heading"></h2>
                    <input id="login" type="image" src="public/images/GitHub_Logo.jpg">
                    {{/unless}}
                </div>
            </div>
            {{!-- /.hero-basic --}}

            <div class="hero-expanded">
                <h1>Expanded</h1>
                <br/>
                <br/>

            </div>
            {{!-- /.hero-expanded --}}
        </div>
        {{!-- /.hero-left --}}

        {{!-- Hero Right --}}
        <div class="hero-right">
            <div class="hero-basic">
                <h1>Instructor</h1>
                <div class="login-box animated fadeInUp">
                    <div class="box-header">
                        <h2>Login</h2>
                    </div>

                    {{#if message}}
                    <h3> {{message}} </h3>
                    <button class="btn btn-lg btn-primary btn-block" id='authenticatedUser'>Continue</button>
                    {{/if}}

                    {{#unless message}}
                    <h2 class="form-signin-heading"></h2>
                    <input id="login" type="image" src="public/images/GitHub_Logo.jpg">
                    {{/unless}}
                </div>
            </div>
            {{!-- /.hero-basic --}}

            <div class="hero-expanded">
                <h1>Expanded</h1>
                <br/>
                <br/>

            </div>
            {{!-- /.hero-expanded --}}
        </div>
        {{!-- /.hero-right --}}

    </div>
    {{!-- /.row --}}
</section>

<script>
    $(document).ready(function () {
        $('#logo').addClass('animated fadeInDown');
        $("input:text:visible:first").focus();
    });
</script>